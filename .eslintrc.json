{
    "root": true,
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": ["@typescript-eslint"],
    "rules": {
        "no-empty": "warn",
        "use-isnan": "error",
        "no-else-return": "warn",
        "eqeqeq": "error",
        "@typescript-eslint/no-unused-vars": [
            "error",
            { "argsIgnorePattern": "^_" }
        ],
        "node/no-unsupported-features/es-syntax": "off",
        "node/no-missing-import": [
            "error",
            {
                "allowModules": ["express-serve-static-core"],
                "resolvePaths": ["src"],
                "tryExtensions": [".ts", ".js", ".json"]
            }
        ],
        "node/no-unpublished-import": [
            "error",
            {
                "allowModules": ["handlebars", "supertest"]
            }
        ]
    },
    "ignorePatterns": ["dist"]
}
