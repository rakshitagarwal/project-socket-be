{
    "openapi": "3.0.2",
    "security": [],
    "info": {
        "title": "BigDeal Api",
        "description": "API for BigDeal",
        "version": "1.0.0"
    },
    "tags": [{ "name": "users", "description": "User Operations" }],
    "servers": [
        {
            "url": "{basePath}",
            "description": "Main Server",
            "variables": { "basePath": { "default": "/v1", "enum": ["/v1"] } }
        }
    ],
    "paths": {
        "/user/register": {
            "post": {
                "tags": ["users"],
                "summary": "Create new user",
                "security": [],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "additionalProperties": false,
                                "properties": {
                                    "first_name": {
                                        "type": "string",
                                        "default": "string"
                                    },
                                    "last_name": {
                                        "type": "string",
                                        "default": "string"
                                    },
                                    "email": {
                                        "type": "string",
                                        "default": "string"
                                    },
                                    "password": {
                                        "type": "string",
                                        "default": "string"
                                    },
                                    "role_id": {
                                        "type": "string",
                                        "default": "string"
                                    },
                                    "mobile_no": {
                                        "type": "string",
                                        "default": "string"
                                    },
                                    "country": {
                                        "type": "string",
                                        "default": "string"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/user/admin/login": {
            "post": {
                "tags": ["users"],
                "summary": "Sign in admin",
                "security": [],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "additionalProperties": false,
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "default": "string"
                                    },
                                    "password": {
                                        "type": "string",
                                        "default": "string"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/user/login": {
            "post": {
                "tags": ["users"],
                "summary": "Sign in user",
                "security": [],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "additionalProperties": false,
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "default": "string"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/user/logout": {
            "put": {
                "tags": ["users"],
                "summary": "logout user",
                "security": [
                    {
                        "BearerAuth": []
                    }
                ]
            }
        },
        "/user/reset-password": {
            "put": {
                "tags": ["users"],
                "summary": "reset password",
                "security": [],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "additionalProperties": false,
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "default": "string"
                                    },
                                    "old_password": {
                                        "type": "string",
                                        "default": "string"
                                    },
                                    "new_password": {
                                        "type": "string",
                                        "default": "string"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/user/verify": {
            "patch": {
                "tags": ["users"],
                "summary": "registration verification | forget-password verification ",
                "security": [],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "additionalProperties": false,
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "default": "string"
                                    },
                                    "otp_type": {
                                        "type": "string",
                                        "default": "string"
                                    },
                                    "opt": {
                                        "type": "number",
                                        "default": "number"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/user/{userId}": {
            "put": {
                "tags": ["users"],
                "summary": "update user details",
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "in": "path",
                        "name": "userId",
                        "schema": {
                            "type": "string"
                        },
                        "required": true
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "additionalProperties": false,
                                "properties": {
                                    "first_name": {
                                        "type": "string",
                                        "default": "string"
                                    },
                                    "last_name": {
                                        "type": "string",
                                        "default": "string"
                                    },
                                    "role_id": {
                                        "type": "string",
                                        "default": "string"
                                    },
                                    "mobile_no": {
                                        "type": "string",
                                        "default": "string"
                                    },
                                    "country": {
                                        "type": "string",
                                        "default": "string"
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "delete": {
                "tags": ["users"],
                "summary": "delete user",
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "in": "path",
                        "name": "userId",
                        "schema": {
                            "type": "string"
                        },
                        "required": true
                    }
                ]
            },
            "get": {
                "tags": ["users"],
                "summary": "fetch user details",
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "in": "path",
                        "name": "userId",
                        "schema": {
                            "type": "string"
                        },
                        "required": true
                    }
                ]
            }
        },
        "/user/resent-otp": {
            "get": {
                "tags": ["users"],
                "summary": "reset opt",
                "security": [],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "additionalProperties": false,
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "default": "string"
                                    },
                                    "otp_type": {
                                        "type": "string",
                                        "default": "string"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/user": {
            "get": {
                "tags": ["users"],
                "summary": "fetch all users",
                "security": [
                    {
                        "BearerAuth": []
                    }
                ]
            }
        }
    }
}
