{
  "openapi": "3.0.0",
  "info": {
    "title": "BigDeal AdminPanel API",
    "version": "1.0.0",
    "description": "BigDeal API",
    "contact": {
      "email": "bigdeal@globalvoxinc.com",
      "name": "Bigdeal"
    },
    "termsOfService": "Can be used by anyone"
  },
  "tags": [
    { "name": "Users", "description": "User operations" },
    { "name": "Products", "description": "Product operations" }
  ],
  "servers": [
    {
      "url": "http:localhost:3300",
      "description": "Main Server",
      "variables": { "basePath": { "default": "/v1", "enum": ["v1"] } }
    }
  ],
  "paths": {
    "/product": {
      "post": {
        "tags": ["Products"],
        "description": "Add a new product",
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "title": {
                    "type": "string",
                    "format": "string",
                    "nullable": false
                  },
                  "descirption": {
                    "type": "string",
                    "format": "string",
                    "nullable": false
                  },
                  "image": {
                    "type": "string",
                    "format": "binary",
                    "nullable": false
                  },
                  "purchasePrice": {
                    "type": "number",
                    "format": "number",
                    "nullable": false
                  },
                  "sellingPrice": {
                    "type": "number",
                    "format": "number",
                    "nullable": false
                  },
                  "overHeadCost": {
                    "type": "number",
                    "format": "number",
                    "nullable": false
                  },
                  "quantity": {
                    "type": "number",
                    "format": "number",
                    "nullable": false
                  },
                  "status": {
                    "type": "boolean",
                    "format": "boolean",
                    "default": false,
                    "nullable": false
                  },
                  "ProductCategory": {
                    "type": "string",
                    "format": "string",
                    "nullable": false
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  }
}
